@model List<Model.EF.ProductCat>
<div class="header_bottom_left">
    <div class="categories">
        <ul>
            
            <h3>Categories</h3>
            @foreach (var item in Model.Where(x => x.ParrentID == null))
            {
                var child = Model.Where(x => x.ParrentID == item.ID);
                var parentClass = child.Any() ? "class=dropdown-toggle data-toggle=dropdown" : "";
                <li class="dropdown">
                    <a href="/product-cat/@item.MetaTitle-@item.ID" @parentClass>@item.Name</a>


                    @if (child.Any())
                    {
                    <ul class="dropdown-menu">
                        @foreach (var childItem in child)
                        {
                            <li><a href="/product-cat/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>
                        }

                    </ul>
                    }
                </li>
            }
        </ul>
    </div>
</div>
