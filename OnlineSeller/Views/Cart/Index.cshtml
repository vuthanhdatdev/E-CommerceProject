@model List<OnlineSeller.Models.CartItem>
@{
    ViewBag.Title = "CJ Shop - Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
<script src="~/Scripts/plugin/CartController/CartController.js"></script>
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Product ID</td>
                        <td>Name</td>
                        <td>Image</td>
                        <td>Quantity</td>
                        <td>Price</td>
                        <td>Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Img" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" size="2"/></td>
                            <td>@item.Product.price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Delete</a></td>
                        </tr>
                    }

                </tbody>
            </table>

            <button id="btnContinue" class="btn">Buy More</button>
            <button id="btnUpdate" class="btn">Update Cart</button>
            <button id="btnDeleteAll" class="btn">Clear Cart</button>
            <button id="btnPayment" class="btn">Buy</button>
        }
        else
        {
            <span class="alert alert-danger">No have product in cart</span>
        }

    </div>
</div>

